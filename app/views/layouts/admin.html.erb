<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
        "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
  <title>GoodLife - Administration</title>
  <%= stylesheet_link_tag :all, "token-input" %>
  <!--<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>-->
  <%= javascript_include_tag :defaults, "jquery.tokeninput" %>
  <%= kindeditor_javacript_include_tag %>
  <meta charset="utf-8">
  <%= csrf_meta_tag %>
  <style type="text/css">
    .admin_navigation {
        margin: 0px 5px 0px auto;
        float:right;
    }
    .admin_navigation ul {
        padding: 0;
        margin: 0;
        text-align: right;
    }
    .admin_navigation li {
        display:inline;
        padding: 0;
        margin: 0;
    }
    .admin_navigation li span.disabled {
        color: #888888;
    }
    .admin_navigation a, .admin_navigation a:visited, .admin_navigation a:hover {
        border: none;
        padding:0;
        margin:0;
        font-weight: normal;
    color: #000000;
    }
    .admin_navigation a:hover {
        font-weight: normal;
        color: #CB4415;
    }
    .admin_navigation a.active {
        font-weight: bold;
    }
    .notice {
        margin: 0px 5px 0px auto;
        float: left;
    }
    .alert {
        margin: 0px 5px 0px auto;
        float: left;
    }
  </style>
</head>
<body>
<div id="wrapper">
  <div class="row" id="header">
    <div class="column grid_14">
       <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
      <div id="admin_navigation" class="admin_navigation">
        <ul>
          <li><%= link_to "Public Site", root_path %></li>
          <%if admin_user_signed_in?%>
            <li><%= link_to "Sign Out", destroy_admin_user_session_path, :method => :delete %></li>
          <%end%>
        </ul>
      </div>
    </div>
  </div>
  <div class="row" id="content">
    <div class="column grid_14">
        <% if admin_user_signed_in? %>
           <% tabnav :admin do %>
	         <%= yield %>
	  	   <% end %>
        <% else %>
           <%=yield%>
        <% end %>
    </div>
  </div>
  <div id="clear"></div>
</div>
</body>
</html>