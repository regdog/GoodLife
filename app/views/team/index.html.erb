<div class="pagetitle"><h1><%= @page_title %></h1></div>
<div class="column grid_10">
  <div class="thirdnav">
    <ul>
      <li class="<%= active_li_css(@view_by, "Teammates") %>"><%= link_to 'Teammates', teammates_path %></li>
      <li class="<%= active_li_css(@view_by, "Our Feats") %>"><%= link_to 'Our Feats', team_checkins_path %></li>
      <li class="<%= active_li_css(@view_by, "Requests") %>"><%= link_to 'Requests', my_requests_path %></li>
      <li class="<%= active_li_css(@view_by, "Invite") %>"><%= link_to 'Invite Teammates', invitation_path %></li>
    </ul>
  </div>
  <% tableize @teammates,
                :name => 'members',
                #:header => 'Listing Feats',
                :cols => 4,
                :generate_css => false do |teammate| %>

    <%= render :partial => "shared/membergrid", :locals => {:member => teammate} %>
  <% end %>
  <hr/>
  <div id="invite_teammember">
    <fieldset>
      <legend>Invite Teammates</legend>
      <%= form_tag 'team/invite', :method => 'get' do %>
        <%= label_tag "Invite a Member:"%>
        <%= text_field_tag :id %>
        <%= submit_tag 'SEND INVITES' %>
      <% end %>
      <hr/>
      <%= form_for @user,:url=> user_invitation_path do |f| %>
        <%= f.label "Invite via E-mail:"%>
        <%= f.email_field :email %>
        <%= f.submit 'SEND INVITES' %>
      <% end %>
    </fieldset>

  </div>
</div>
<div class="column grid_4">
  <%= render :partial => "shared/rightbar" %>
</div>