<div class="row">
  <div class="column grid_10">
    <h1>Edit <%= @content.title %></h1>
    <p><a href=<%="/admin/contents"%>>&laquo; Back to Content List</a></p>
    <%= form_for @content, :url => {:action => "update"}, :html => { :multipart => true } do |f| %>
      <p>
        <%= f.label "Category" %><br/>
        <%= collection_select :content, :tag_id, Tag.of_kind("Content"), :id, :name, {:include_blank => 'Please Select'}, :prompt => true %>
      </p>
      <p>
        <%= f.label "Title" %><br/>
        <%= f.text_field :title %>
      </p>
      <p>
        <%= f.label "Permalink" %><br/>
        <%= f.text_field :permalink %>
      </p>
      <p>
        <%= f.label "Content" %><br/>
        <%= f.text_area :content, :id => "kindeditor", :size => "80x30" %>
      </p>
      <p>
        <%= f.label "Draft" %><br/>
        <%= f.check_box :draft %>
      </p>
      <p><%= f.submit "Update" %></p>
    <% end %>
  </div>
</div>