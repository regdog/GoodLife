<div class="row">
  <div class="column grid_10">
    <h1>New Partner</h1>
    <p><a href="/admin/partners">&laquo; Back to Partner List</a></p>
    <%= form_for @partner, :url => {:action => "create"}, :html => { :multipart => true } do |f| %>
      <p>
        <%= f.label "Category" %><br/>
        <%= collection_select :partner, :tag_id, Tag.of_kind("Partner"), :id, :name, {:include_blank => 'Please Select'}, :prompt => true %>
      </p>
      <p>
        <%= f.label "Business Name" %><br/>
        <%= f.text_field :business_name %>
      </p>
      <p>
        <%= f.label "Description" %><br/>
        <%= f.text_field :description %>
      </p>
      <p>
        <%= f.label "website" %><br/>
        <%= f.text_field :website %>
      </p>
      <p>
        <%= f.label "Country" %><br/>
        <%= raw f.country_select :country, :only => [:china], :update => "partner_state", :name => "partner[country]"  %>
      </p>
      <p>
        <%= f.label "State" %><br/>
        <%= raw f.state_select :state, :country => :china, :update => "partner_city", :name => "partner[state]"   %>
      </p>
      <p>
        <%= f.label "City" %><br/>
        <%= raw f.capital_select :city, :country => :china, :name => "partner[city]" %>
      </p>
      <p>
        <%= f.label "Street" %><br/>
        <%= f.text_field :street %>
      </p>
      <p>
        <%= f.label "zip code" %><br/>
        <%= f.text_field :zipcode %>
      </p>
      <p>
        <%= f.label "contact" %><br/>
        <%= f.text_field :contact %>
      </p>
      <p>
        <%= f.label "title" %><br/>
        <%= f.text_field :title %>
      </p>
      <p>
        <%= f.label "phone" %><br/>
        <%= f.text_field :phone %>
      </p>
      <p>
        <%= f.label "email" %><br/>
        <%= f.text_field :email %>
      </p>
      <div class="newPaperclipFiles">
        <%= f.fields_for :image do |builder| %>
          <p>
            <%= builder.label "Add A Photo" %><br/>
            <%= builder.file_field :upload %>
          </p>
        <% end %>
      </div>
        <%= f.fields_for :admin_users do |admin_user|%>
          <p>
            <%= admin_user.label "E-mail" %><br/>
            <%= admin_user.email_field :email %>
          </p>
          <p>
            <%= admin_user.label "Password" %><br/>
            <%= admin_user.password_field :password %>
          </p>
          <p>
            <%= admin_user.label "Password Confirmation" %><br/>
            <%= admin_user.password_field :password_confirmation %>
          </p>
          <% @roles.each do |role|%>
            <p>
              <%= check_box_tag 'partner[admin_users_attributes][0][role_ids][]', role.id%>
              <%=h role.name%>
            </p>
          <%end%>
          <%= hidden_field_tag 'partner[admin_users_attributes][0][role_ids][]', '' %>
        <%end%>
      <p><%= f.submit "Create" %></p>
    <% end %>
  </div>
</div>