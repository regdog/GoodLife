<div class="admin_user">
<p>
  <%= f.label "E-mail" %><br/>
  <%= f.email_field :email %>
</p>
<p>
  <%= f.label "Password" %><br/>
  <%= f.password_field :password %>
</p>
<p>
  <%= f.label "Password Confirmation" %><br/>
  <%= f.password_field :password_confirmation %>
</p>
<% @roles.each do |role|%>
  <p>
    <%= check_box_tag "partner[admin_users_attributes][#{index}][role_ids][]", role.id, admin_user.roles.include?(role)%>
    <%=h role.name%>
  </p>
<%end%>
<%= hidden_field_tag "partner[admin_users_attributes][#{index}][role_ids][]", '' %>
<%= f.hidden_field(:_destroy)%>
<%= link_to_function "Remove Partner Account", "remove_admin_user(this)"%>
</div>