<div class="row">
  <div class="column grid_10">
    <h1>Edit <%= @partner.business_name %></h1>
    <p><a href=<%="/admin/partners"%>>&laquo; Back to Partner List</a></p>
    <%= form_for @partner, :url => {:action => "update"}, :html => { :multipart => true } do |f| %>
      <p>
        <%= f.label "Category" %><br/>
        <%= collection_select :partner, :tag_id, Tag.of_kind("Partner"), :id, :name, {:include_blank => 'Please Select'}, :prompt => true %>
      </p>
      <p>
        <%= f.label "Business Name" %><br/>
        <%= f.text_field :business_name %>
      </p>
      <p>
        <%= f.label "Description" %><br/>
        <%= f.text_field :description %>
      </p>
      <p>
        <%= f.label "website" %><br/>
        <%= f.text_field :website %>
      </p>
      <p>
        <%= f.label "Country" %><br/>
        <%= raw f.country_select :country, :only => [:china], :update => "partner_state", :name => "partner[country]"  %>
      </p>
      <p>
        <%= f.label "State" %><br/>
        <%= raw f.state_select :state, :country => :china, :update => "partner_city", :name => "partner[state]"   %>
      </p>
      <p>
        <%= f.label "City" %><br/>
        <%= raw f.capital_select :city, :country => :china, :name => "partner[city]" %>
      </p>
      <p>
        <%= f.label "Street" %><br/>
        <%= f.text_field :street %>
      </p>
      <p>
        <%= f.label "zip code" %><br/>
        <%= f.text_field :zipcode %>
      </p>
      <p>
        <%= f.label "contact" %><br/>
        <%= f.text_field :contact %>
      </p>
      <p>
        <%= f.label "title" %><br/>
        <%= f.text_field :title %>
      </p>
      <p>
        <%= f.label "phone" %><br/>
        <%= f.text_field :phone %>
      </p>
      <p>
        <%= f.label "email" %><br/>
        <%= f.text_field :email %>
      </p>
      <div class="PaperclipFiles">
          <% if @partner.image.nil? %>
            <%= f.fields_for :image, @partner.build_image do |image_form| %>
              <p>
                <%= image_form.label "Add A Photo" %><br/>
                <%= image_form.file_field :upload %>
              </p>
            <% end %>
          <% else %>
            <p><%= image_tag @partner.image.url(:small) %></p>
            <%= f.fields_for :image do |image_form| %>
              <p>
                <%= image_form.label "Change A Photo" %><br/>
                <%= image_form.file_field :upload %>
              </p>
            <% end %>
          <% end %>
      </div>
      <% @partner.admin_users.each_with_index do |admin_user, index|%>
        <%= f.fields_for :admin_users, admin_user do |builder|%>
	        <div class="admin_user">
		      <%= link_to_function "Remove", "remove_admin_user(this)"%>
	          <%= render 'admin_user', :f => builder, :index => index, :admin_user=>admin_user %>
	        </div>
	    <%end%>
      <%end%>
      <p><%= f.submit "Update" %></p>
    <% end %>
  </div>
</div>