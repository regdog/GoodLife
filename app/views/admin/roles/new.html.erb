<div class="row">
  <div class="column grid_10">
    <h1>New Role</h1>
    <p><a href="/admin/roles">&laquo; Back to Role List</a></p>
    <%= form_for @role, :url => {:action => "create"}, :html => { :multipart => true } do |f| %>
      <p>
        <%= f.label "Role Name" %><br/>
        <%= f.text_field :name %>
      </p>
      <p><%= f.submit %></p>
    <% end %>
  </div>
</div>
